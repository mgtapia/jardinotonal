{% extends '::base.html.twig' %}

{% block title %}Jardín Otoñal{% endblock %}

{% block stylesheets %}
	<link href="https://fonts.googleapis.com/css?family=Raleway|Roboto+Condensed" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="{{asset('css/normalize.min.css')}}">
	<link rel="stylesheet" type="text/css" href="{{asset('css/bootstrap.css')}}">
	<link rel="stylesheet" type="text/css" href="{{asset('css/main.css')}}">
	<link rel="stylesheet" type="text/css" href="{{asset('css/otonal.css')}}">
{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    	{{ include('innobisBundle:Default:menu.html.twig') }}
	    <div style="background:rgba(0,0,0,0.1)">
			<div class="col-md-offset-1 col-md-10" style="margin-top:-20px">
			    <h6 class="m2b" style="background:rgba(0,0,0,0.2)">&copy; {{"now"|date('Y')}}
			    	<a href="http://www.m2btech.cl" target="_blank">M2B Technologies</a> IT Solutions
			    </h6><br/>
			</div>
			{% block admin %}{% endblock %}
		</div>
    {% else %}
    	{% block client %}
    	<body class="bg-otonal">
		    <div style="text-align:center; background:rgba(0,0,0,0.2); height:100vh">
				<a><img class="logo-otonal center-block" src="{{asset('img/logo.png')}}"/></a>
				<h3 style="color:white">Acceso Restringido</h3>
				<a href="{{ path('innobis_homepage') }}" style="color:white">Ir a la Página de Inicio</a>
			</div>			    
		</body>	
		{% endblock %}
	{% endif %}

	{% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success message-alert" role="alert">
          	<div class="container">{{ flashMessage }}</div>
          	<script>
            	setTimeout("$('.message-alert').fadeIn('slow')", 1000);
          		setTimeout("$('.message-alert').fadeOut('slow')", 4000);
        	</script>
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger message-alert" role="alert">
          	<div class="container">{{ flashMessage }}</div>
          	<script>
            	setTimeout("$('.message-alert').fadeIn('slow')", 1000);
          		setTimeout("$('.message-alert').fadeOut('slow')", 4000);
        	</script>
        </div>
    {% endfor %}
{% endblock %}
	
{% block javascripts %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}
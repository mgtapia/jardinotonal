{% extends 'innobisBundle::main.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	<body class="bg-info3">
		<div class="container-fluid" style="background:rgba(0,0,0,0.2)">
		{{ include('innobisBundle:Default:menu.html.twig') }}
		<div class="container-fluid">
		  	<div class="col-md-offset-2 col-md-8">
		      	<div class="page-header margin-none">
		      		{% for reclamo in reclamos %}
						{% if reclamo.id == id %}
		      				{% for cliente in clientes %}
								{% if cliente.rut == reclamo.rut %}
		      						<h1 style="margin-top:100px; color:#fff">{{cliente.nombre}}</h1>
				      			{% endif %}
							{% endfor %}
		      			{% endif %}
					{% endfor %}
		      	</div>
			    <div class="table-responsive">
			      <table class="table table-striped table-hover">
			      	<thead>
				      	<tr style="color:#fff">
							<th>#</th>
							<th>Rut</th>
							<th>Departamento</th>
							<th>Torre</th>
							<th>Recinto</th>
							<th>Inicio</th>
							<th>Termino</th>
							<th>Grevedad</th>
						</tr>
					</thead>
					<tbody style="background:rgba(220,220,220,.95)">
					{% for reclamo in reclamos %}
						{% if reclamo.id == id %}
						<tr>
							<td>{{ loop.index }}</td>
							<td>{{ reclamo.rut }}</td>
							<td>{{ reclamo.departamento }}</td>
							<td>{{ reclamo.torre }}</td>
							<td>{{ reclamo.recinto }}</td>
							<td>{{ reclamo.fechaReclamo|date('d-m-Y') }}</td>
							<td>{{ reclamo.fechaSolucion|date('d-m-Y') }}</td>
							<td>{{ reclamo.gravedad }}</td>
						</tr>
						{% endif %}
					{% endfor %}
					</tbody>
			      </table>
			      <table class="table table-striped table-hover">
			      	<thead>
				      	<tr style="color:#fff">
							<th>Observacion</th>
						</tr>
					</thead>
					<tbody style="background:rgba(220,220,220,.95)">
					{% for reclamo in reclamos %}
						{% if reclamo.id == id %}
						<tr>
							<td>{{ reclamo.observacion }}</td>
						</tr>
						{% endif %}
					{% endfor %}
					</tbody>
			      </table>
			    </div>
			</div>
		</div>
		</div>
	</body>
{% else %}
	{{ include('innobisBundle:Default:error.html.twig') }}
{% endif %}
{% endblock %}


						
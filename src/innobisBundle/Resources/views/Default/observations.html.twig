{% extends 'innobisBundle::main.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	<body class="bg-info2">
		<div class="container-fluid" style="background:rgba(0,0,0,0.2)">
		{{ include('innobisBundle:Default:menu.html.twig') }}
		<div class="container-fluid">
		  	<div class="col-md-offset-2 col-md-8">
		      	<div class="page-header margin-none">
		      		<h1 style="margin-top:100px; color:#fff">Reclamos</h1>
		      	</div>
			    <div class="table-responsive">
			      <table class="table table-striped table-hover">
			      	<thead>
				      	<tr style="color:#fff">
							<th>#</th>
							<th>Rut</th>
							<th>Vivienda</th>
							<th>Recinto</th>
							<th>Ingreso</th>
							<th>Estado</th>
							<th> </th>
						</tr>
					</thead>
					<tbody style="background:rgba(220,220,220,.95)">
					{% for reclamo in reclamos %}
						<tr>
							<td>{{ loop.index }}</td>
							<td>{{ reclamo.rut }}</td>
							<td>{{ reclamo.departamento }}-{{ reclamo.torre }}</td>
							<td>{{ reclamo.recinto }}</td>
							<td>{{ reclamo.fechaReclamo|date('d-m-Y') }}</td>
							{% if reclamo.gravedad != "" %}
							<td><i class="glyphicon glyphicon-ok-sign ok" title="Solucionado"></i></td>
							{% else %}
							<td><i class="glyphicon glyphicon-time time" title="Pendiente"></i></td>
							{% endif %}
							<td><a class="link" href="{{path('innobis_obs',{'id':reclamo.id})}}" title="Ver detalles">
								Ver</a></td>
						</tr>
					{% endfor %}
					</tbody>
			      </table>
			      <div class="clear2"></div><div class="clear2"></div>
			    </div>
			</div>
		</div>
		</div>
	</body>
{% else %}
	{{ include('innobisBundle:Default:error.html.twig') }}
{% endif %}
{% endblock %}
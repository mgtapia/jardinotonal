{% extends 'innobisBundle::main.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	<body class="bg-info3">
		<div class="container-fluid" style="background:rgba(0,0,0,0.2)">
		{{ include('innobisBundle:Default:menu.html.twig') }}
		<div class="container-fluid">
		  	<div class="col-md-offset-2 col-md-8">
		      	<div class="page-header margin-none">
		      		<h1 style="margin-top:100px; color:#fff">Departamentos</h1>
		      	</div>
			    <div class="table-responsive">
			      <table class="table table-striped table-hover">
			      	<thead>
				      	<tr style="color:#fff">
							<th>Vivienda</th>
							<th>Tipo</th>
							<th>Propietario</th>
							<th></th>
						</tr>
					</thead>
					<tbody style="background:rgba(220,220,220,.95)">
					{% for user in deptos %}
						<tr>
							<td>{{ user.departamento }}-{{ user.torre }}</td>
							<td>{{ user.tipo }}</td>
							{% if user.rutDueno == "" %}
								<td> </td><td><a href="{{ path('innobis_asignar',{'id':user.id}) }}" title="Asignar a un Propietario">Asignar</a></td>
							{% else %}
								<td>{{ user.rutDueno }}</td>
								<td>
								{% for cliente in clientes %}
									{% if cliente.rut == user.rutDueno %}
										{{ cliente.nombre }}
									{% endif %}
								{% endfor %}
								</td>	
							{% endif %}	
						</tr>
					{% endfor %}
					</tbody>
			      </table>
			      <div class="clear2"></div><div class="clear2"></div>
			    </div>
			</div>
		</div>
		</div>
	</body>
{% else %}
	{{ include('innobisBundle:Default:error.html.twig') }}
{% endif %}
{% endblock %}
{% extends 'innobisBundle::main.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	<body class="bg-info2">
	<div class="container-fluid" style="background:rgba(0,0,0,0.2)">
		{{ include('innobisBundle:Default:menu.html.twig') }}
		<div class="container-fluid">
		  	<div class="col-md-offset-2 col-md-8">
		      	<div class="page-header margin-none">
		      		<h1 style="margin-top:100px; color:#eee">Clientes</h1>
		      	</div>
			    <div class="table-responsive">
			      <table class="table table-striped table-hover">
			      	<thead>
				      	<tr style="color:#eee">
							<th>#</th>
							<th>Nombre</th>
							<th>Rut</th>
						</tr>
					</thead>
					<tbody style="background:rgba(220,220,220,.95)">
					{% for user in clientes %}
						<tr>
							<td>{{ loop.index }}</td>
							<td>{{ user.nombre }}</td>
							<td>{{ user.rut }}</td>
						</tr>
					{% endfor %}
					</tbody>
			      </table>
			      <div class="clear2"></div><div class="clear2"></div>
			    </div>
			</div>
		</div>
		</div>
	</body>
{% else %}
	{{ include('innobisBundle:Default:error.html.twig') }}
{% endif %}
{% endblock %}